---
interface FooterLink {
	label: string;
	href: string;
}

const links = [
	{ label: 'github', href: 'https://github.com/Reynear' },
	{ label: 'linkedin', href: 'https://www.linkedin.com/in/reynear-douglas-4a29a7248/' },
	{ label: 'email', href: 'mailto:douglasreynear@gmail.com' }
] satisfies FooterLink[];
---

<footer>
	{links.map(function renderFooterLink(link) {
		return (
			<a href={link.href} rel="noreferrer" target="_blank">{link.label}</a>
		);
	})}
</footer>

<style>
	footer {
		margin-top: 0.5rem;
		padding-top: 0.5rem;
		border-top: 1px solid var(--border);
		display: flex;
		flex-wrap: wrap;
		gap: 0.9rem;

		a {
			color: var(--text);
			text-decoration: none;
			font-size: 0.86rem;
			letter-spacing: 0.02em;
			opacity: 0.78;
			border-bottom: 1px solid transparent;
			transition: opacity 0.15s ease, border-color 0.15s ease;
		}

		a:hover,
		a:focus-visible {
			opacity: 1;
			border-bottom-color: var(--border);
		}

		a:focus-visible {
			outline: 2px solid var(--text);
			outline-offset: 4px;
		}
	}
</style>
